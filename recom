#include <iostream>
#include <map>
#include <stdlib.h>
#include <math.h>
#include <windows.h>

using namespace std;

int index(string date) {
    int sum = 0;
    for (int i = 0; i < date.size(); i++) {
        if (date[i] != 46) {
            sum += (int(date[i]) - 48);
        }
    }

    int power = int(date[3]) + int(date[4]) - 96;      
    int i = rand() % 3;
    int random[3]{ 0, 11111111, 22222222 };
    sum = pow(sum, power) + random[i];
    
    unsigned char bytes[4];
    bytes[0] = (sum >> 24) & 0x10;
    bytes[1] = (sum >> 16) & 0x10;
    bytes[2] = (sum >> 8) & 0x10;
    bytes[3] = (sum >> 0) & 0x10;                                                                                                    


    return;
}

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    setlocale(LC_ALL, "russian");

    string name, date;
    map<string, string[14]> catalog;

    cout << "Введите имя: \n";
    cin >> name;
    cout << endl;
    cout << "Введите дату рождения: \n";
    cin >> date;
    cout << "Здравствуйте, " << name << endl;

    cout << index(date);

    return 0;
}
