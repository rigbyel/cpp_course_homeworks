#include <iostream>
#include <map>
#include <stdlib.h>

using namespace std;

int index(string date){
    int sum = 0;
    for (int i = 0; i < date.size(); i++){
        if (date[i] != 46){
            sum += (int(date[i]) - 48);
        }
    }

    return sum;
}

